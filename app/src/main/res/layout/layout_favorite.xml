<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/favoriteList"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:onClick="searchHandler"
    android:orientation="horizontal">

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="false"
        android:text="New Text"
        android:id="@+id/favor_symbol"
        android:gravity="center"
        android:textColor="#000000" />
    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="false"
        android:layout_below="@+id/favor_symbol"
        android:text="New Text"
        android:id="@+id/favor_name"
        android:gravity="center"
        android:textColor="#000000" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:layout_toEndOf="@+id/favor_symbol"
        android:layout_toRightOf="@+id/favor_symbol"
        android:id="@+id/favor_price"
        android:gravity="center"
        android:textColor="#000000" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:layout_toEndOf="@+id/favor_name"
        android:layout_toRightOf="@+id/favor_name"
        android:layout_below="@+id/favor_price"
        android:id="@+id/favor_cap"
        android:gravity="center"
        android:textColor="#000000" />
    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:layout_toEndOf="@+id/favor_price"
        android:layout_toRightOf="@+id/favor_price"
        android:id="@+id/favor_changP"
        android:gravity="center"
        android:textColor="#000000" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:layout_toEndOf="@+id/favor_cap"
        android:layout_toRightOf="@+id/favor_cap"
        android:layout_below="@+id/favor_changP"
        android:id="@+id/favor_market"
        android:gravity="center"
        android:textColor="#000000" />

</RelativeLayout>
